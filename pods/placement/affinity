apiVersion: apps/v1
kind: Deployment
metadata:
  name: pref
spec:
  selector:
    matchLabels:
      app: pref
  replicas: 3
  template:
    metadata:
      labels:
        app: pref
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: zone           # assign this label to node
                operator: In
                values:
                - east
                #- west we can add multiple values too

      containers:
      - args:
        - sleep
        - "99999"
        image: busybox
        name: main
